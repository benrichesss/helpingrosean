import random

player1name = input("Please enter your name: ")
player1score = 0

print("Hello,",player1name)
print("Your score is currently:",player1score)

player2name = input("Please enter your name, player 2: ")
player2score = 0

print("Hello,",player2name)
print("Your score is currently:",player2score)

dice1 = random.randint(1,6)
dice2 = random.randint(1,6)
total = dice1 + dice2
print("The first dice is:",dice1)
print("The second dice is:",dice2)
print("Your total is:",total)
